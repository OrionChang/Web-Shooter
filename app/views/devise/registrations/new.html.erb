


<div class="border-form-div">
 
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-signup', :id => "user_signup"}) do |f| %>
   <h2 class="form-signup-heading">Sign up</h2>
    
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', :class => 'form-control', :id => "signup_email"%>
    <%= f.password_field :password, :placeholder => 'Password', :class=>'form-control', :id => "signup_password"%>
    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation', :class=>'form-control', :id => "signup_password_confirmation" %>
    <%= f.submit "Sign up",:class=>'btn btn-primary btn-block' %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>