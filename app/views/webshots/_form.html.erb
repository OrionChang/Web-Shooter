<%= form_for(@webshot) do |f| %>

  <div class= "col-7">

    <%= link_to(
      image_tag(@webshot.photo.url(:medium), 
                :class => "featurette-image img-responsive", 
                :alt => @webshot.url,
                :title => "Link to full-size image in a new window.",
                :html => { 
                  "data-src" => "holder.js/500x500/auto"
                }),
      full_webshot_path(@webshot),
      :target => "_blank"
    ) %>

  </div>
  <div class= "col-5">
    <div class="form-group">
      <%= f.label :title %><br>
      <%= f.text_field :title, :class => "form-control"  %>
    </div>
    <div >
      <%= f.label :desc , "Description"%><br>
      <%= f.text_area :desc , :rows => "10", :class => "form-control" %>
    </div class="form-group">
    <hr />
    <div class="form-group pull-right">
      <%= f.submit "Save this webshot", :class => "btn btn-primary" %>
      <%= link_to 'Discard', @webshot, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
    </div>
  </div>


<% end %>
